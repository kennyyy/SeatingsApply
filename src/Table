CREATE TABLE OTHER(
    BNO NUMBER(10),                  --PK
    WRITER VARCHAR2(30) NOT NULL,    --작성자
    TITLE VARCHAR2(50) NOT NULL,     --제목
    CONTENT VARCHAR2(500),           --내용
    HIT NUMBER(10),
    REGDATE DATE DEFAULT SYSDATE
);

ALTER TABLE OTHER ADD CONSTRAINT OTHER_PK PRIMARY KEY (BNO); --PK키 설정
 
CREATE SEQUENCE OTHER_SEQ NOCACHE;

ALTER SEQUENCE OTHER_SEQ NOCACHE;

